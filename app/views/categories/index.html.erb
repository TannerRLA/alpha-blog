<h1 align="center">Listing all categories</h1> 
<div align="center">
	<%= will_paginate class: "pagination"%>
	<% @categories.each do |category| %>
		<ul class="listing">
			<div class="row">
				<div class ="center card card-body bg-light">
					<li class="article-titel">
						<%= link_to "#{category.name}", category_path(category) %>
					</li>
					<li><small><%= pluralize(category.articles.count, "article") %>
					</small>
				</li>
				</div>
			</div>
		</ul>	 

	<% end %>
	<%= will_paginate %>
</div>